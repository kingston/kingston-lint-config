{
  "name": "@ktam/lint-node",
  "version": "0.1.0",
  "private": true,
  "description": "ESLint and Prettier configs for ESM Node.JS projects",
  "keywords": [
    "eslint",
    "prettier",
    "node"
  ],
  "repository": "https://github.com/kingston/node-tools/packages/lint-node",
  "license": "MIT",
  "author": "Kingston Tam",
  "sideEffects": false,
  "type": "module",
