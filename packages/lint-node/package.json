{
  "name": "@ktam/lint-node",
  "version": "0.3.0",
  "description": "ESLint and Prettier configs for ESM Node.JS projects",
  "keywords": [
    "eslint",
    "prettier",
    "node"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kingston/ktam-tools"
  },
  "license": "MIT",
  "author": "Kingston Tam",
  "sideEffects": false,
  "type": "module",
  "exports": {
    "./eslint-configs/typescript": "./eslint-configs/typescript.js",
    "./eslint-configs/prettier": "./eslint-configs/prettier.js",
    "./eslint": "./eslint.config.node.js",
    "./prettier": "./prettier.config.node.js"
  },
  "files": [
    "eslint-configs/*.js",
    "prettier.config.node.js",
    "eslint.config.node.js",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "lint": "eslint .",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier -w ."
  },
  "dependencies": {
    "@eslint/js": "9.17.0",
    "@vitest/eslint-plugin": "1.1.20",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.7.0",
    "eslint-plugin-import-x": "4.6.1",
    "eslint-plugin-perfectionist": "4.3.0",
    "eslint-plugin-unicorn": "56.0.1",
    "prettier-plugin-packagejson": "2.5.6",
    "typescript-eslint": "8.18.1"
  },
  "devDependencies": {
    "@tsconfig/node20": "20.1.4",
    "@types/eslint-config-prettier": "6.11.3",
    "@types/eslint__js": "8.42.3",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "volta": {
    "node": "20.18.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
